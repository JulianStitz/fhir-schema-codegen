{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@fscg/*": [
        "*"
      ]
    },
    "rootDir": "./src",
    "types": [
      "node"
    ],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "disableReferencedProjectLoad": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/static/**/*"
  ]
}